{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "lib": ["ES2022"]
  },
  "include": ["*.ts", "../runtime/*.ts"],
  "exclude": ["node_modules", "dist"]
}
